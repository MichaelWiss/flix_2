<h3>Genres</h3>
    <ul>
     <% @genres.each do |genre| %>
       <li><%= genre.name %></li>
     <% end %>
    </ul>


 <% if @fans.any? %>
  <h3>Fans</h3>
  <ul>
    <% @fans.each do |user| %>
      <li>
      <p>
      <%= profile_image_for(user, size: 35) %>

      <%= link_to user.name, user %>
      </p>
      </li>
    <% end %>
  </ul>
 <% end %>